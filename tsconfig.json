{
    "compilerOptions": {
        "target": "ESNext",
        "resolveJsonModule": true,
        "module": "commonjs",
        "jsx": "react-jsx",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        },
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": ["./src"],
    "exclude": ["dist/**", "node_modules/**.*"]
}
